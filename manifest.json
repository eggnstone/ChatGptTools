{
    "action": {
        "default_title": "Tools for ChatGPT"
    },
    "content_scripts": [
        {
            "js": [
                "jquery-3.6.4.slim.min.js",
                "tools.js",
                "main.js"
            ],
            "matches": [
                "https://chat.openai.com/chat*"
            ],
            "run_at": "document_end"
        }
    ],
    "description": "Tools to make working with ChatGPT easier, e.g. copying text to the clipboard.",
    "host_permissions": [],
    "icons": {
        "128": "images/logo128.png"
    },
    "manifest_version": 3,
    "name": "Tools for ChatGPT",
    "permissions": [],
    "version": "1.0.2",
    "web_accessible_resources": [
        {
            "resources": [
                "css/menu.css",
                "images/copy.svg"
            ],
            "matches": [
                "https://chat.openai.com/*"
            ]
        }
    ]
}
